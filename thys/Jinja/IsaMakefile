## configurables

SESSION-NAME = Jinja
BASE-IMAGE = HOL

## targets

default: $(SESSION-NAME)
test: $(SESSION-NAME)
# usually empty:
images: $(SESSION-NAME) 

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

# turn image into absolute path according to ISABELLE_IMAGE_PATH or OUT
ifeq ($(ISABELLE_IMAGE_PATH),)
IMAGE=$(OUT)/$(BASE-IMAGE)
else
IMAGE=$(ISABELLE_IMAGE_PATH)$(BASE-IMAGE)
endif


USEDIR = $(ISATOOL) usedir -v true -i true -g true -d pdf -P "http://isabelle.in.tum.de/library/" # -D generated

# time limit (in sec)
MAXTIME = 5400


## dependencies

$(SESSION-NAME): $(OUT)/$(SESSION-NAME)

$(OUT)/$(SESSION-NAME): $(IMAGE) ROOT.ML \
  Common/*.thy J/*.thy JVM/*.thy DFA/*.thy BV/*.thy \
  Compiler/*.thy document/root.bib document/root.tex \
  document/introduction.tex
	ulimit -t $(MAXTIME); $(USEDIR) -b $(IMAGE) $(SESSION-NAME)


## clean

clean:
	@rm -f $(LOG)/$(BASE-IMAGE)-$(SESSION-NAME).gz
	@rm -f $(OUT)/$(SESSION-NAME)
